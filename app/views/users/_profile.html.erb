<table class="table">
		<tr><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></tr>

		<tr>
			<th>name</th>
			<td><%= @user.name %></td>
		</tr>

		<tr>
			<th>introduction</th>
			<td><%= @user.introduction %></td>
		</tr>
		<tr>
			<th>follows</th>
			<td>
				<%= link_to relationships_follows_path do %>
					<%= @user.followings.count %>
				<% end %>
			</td>
		</tr>
		<tr>
			<th>followers</th>
			<td>
				<%= link_to relationships_followers_path do %>
					<%= @user.followers.count %>
				<% end %>
			</td>
		</tr>
</table>

<div class="row">
	<%= link_to '',edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_@user_#{@user.id}" %>
</div>